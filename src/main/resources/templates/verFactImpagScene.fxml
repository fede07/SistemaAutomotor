<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="650.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grupo2.SistemaAutomotor.controlador.VisualizarFacImpagControlador">
    <left>
        <fx:include source="mainScene.fxml" />
    </left>
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="800.0" styleClass="menu_container" BorderPane.alignment="CENTER">
            <HBox alignment="TOP_CENTER" maxHeight="125.0" minHeight="125.0" prefHeight="125.0" prefWidth="800.0" styleClass="title_container" stylesheets="@../styles/content.css">
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Visualizar Facturas Impagas" />
            </HBox>
            <VBox alignment="CENTER" prefHeight="1080.0" prefWidth="1920.0" stylesheets="@../styles/content.css">
                <VBox alignment="CENTER">
                    <HBox alignment="CENTER">
                  <Label maxWidth="100.0" minWidth="75.0" prefHeight="20.0" prefWidth="100.0" text="Dominio: " />
                        <TextField fx:id="dominioTextField" maxHeight="32.0" minHeight="32.0" prefHeight="32.0" prefWidth="175.0" />
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </padding>
                    </HBox>
                    <VBox>
                        <HBox alignment="CENTER">
                            <Label maxWidth="100.0" minWidth="75.0" prefHeight="20.0" prefWidth="100.0" text="Desde Cuota:" />
                            <ComboBox fx:id="fechaapartirComboBox" maxHeight="32.0" prefHeight="25.0" prefWidth="60.0" />
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER">
                            <Label maxWidth="100.0" minWidth="75.0" prefHeight="17.0" prefWidth="100.0" text="Hasta Cuota:" />
                            <ComboBox fx:id="fechaHastaComboBox" maxHeight="32.0" prefHeight="25.0" prefWidth="60.0" />
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </HBox>
                    </VBox>
                    <HBox alignment="CENTER">
                        <Button fx:id="buscarButton" maxHeight="32.0" minHeight="32.0" mnemonicParsing="false" onAction="#buscarBoletas" prefHeight="32.0" prefWidth="75.0" text="Buscar" />
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </padding>
                    </HBox>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </VBox>
                <TableView fx:id="boletaTabla" maxWidth="1000.0" prefWidth="1000.0">
                    <placeholder>
                        <Label alignment="CENTER" prefHeight="42.0" prefWidth="200.0" styleClass="label_aux" stylesheets="@../styles/content.css" text="Ingresar Dominio" textAlignment="CENTER">
                            <padding>
                                <Insets bottom="10.0" top="10.0" />
                            </padding></Label>
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="cuotaColumna" maxWidth="1500.0" prefWidth="100.0" text="Cuota" />
                        <TableColumn fx:id="importeColumna" maxWidth="1500.0" prefWidth="100.0" text="Importe" />
                        <TableColumn fx:id="fechadevenColumna" maxWidth="1500.0" prefWidth="100.0" text="Fecha de Vencimiento" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <VBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </VBox.margin>
                </TableView>
                <VBox alignment="BOTTOM_CENTER" prefHeight="48.0" prefWidth="800.0" spacing="30.0">
                    <HBox alignment="CENTER" spacing="30.0">
                        <Button fx:id="realizarPagoButton" maxHeight="32.0" mnemonicParsing="false" text="Realizar Pago" />
                  <VBox.margin>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </VBox.margin>
                    </HBox>
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
