<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="750.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grupo2.SistemaAutomotor.controlador.VisualizarFacImpagControlador">
    <left>
        <fx:include source="mainScene.fxml" />
    </left>
    <center>
        <AnchorPane>
            <VBox alignment="CENTER" layoutX="14.0" spacing="10.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
                <Label alignment="CENTER" text="Visualizar Facturas Impagas" textAlignment="CENTER">
                    <font>
                        <Font name="Berlin Sans FB" size="30.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" spacing="5.0">
                    <Label prefHeight="17.0" prefWidth="48.0" text="Dominio" />
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <TextField fx:id="dominioTextField" prefHeight="25.0" prefWidth="175.0" />
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <Label prefHeight="1.0" prefWidth="72.0" text="Desde Cuota:" />
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <ComboBox fx:id="fechaapartirComboBox" prefHeight="25.0" prefWidth="175.0" />
                </HBox>
                <HBox alignment="CENTER" prefHeight="3.0" prefWidth="800.0" spacing="5.0">
                    <Label prefHeight="17.0" prefWidth="70.0" text="Hasta Cuota:" />
                </HBox>
                <HBox alignment="CENTER" prefHeight="17.0" prefWidth="793.0" spacing="5.0">
                    <ComboBox fx:id="fechaHastaComboBox" prefHeight="25.0" prefWidth="175.0" />
                </HBox>
                <Button fx:id="buscarButton" mnemonicParsing="false" onAction="#buscarBoletas" prefWidth="75.0" text="Buscar" />
                <TableView fx:id="boletaTabla" prefHeight="400.0" prefWidth="750.0">
                    <columns>
                        <TableColumn fx:id="cuotaColumna" maxWidth="1500.0" minWidth="-1.0" prefWidth="133" text="Cuota" />
                        <TableColumn fx:id="importeColumna" maxWidth="1500.0" minWidth="-1.0" prefWidth="133" text="Importe" />
                        <TableColumn fx:id="fechadevenColumna" maxWidth="1500.0" minWidth="-1.0" prefWidth="133" text="Fecha de Vencimiento" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <Button alignment="CENTER_RIGHT" mnemonicParsing="false" text="Realizar Pago" />
            </VBox>
        </AnchorPane>
    </center>
</BorderPane>
