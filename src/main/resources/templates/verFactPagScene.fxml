<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="750.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grupo2.SistemaAutomotor.controlador.VisualizarFacPagControlador">
    <left>
        <fx:include source="mainScene.fxml" />
    </left>
    <center>
        <AnchorPane>
            <VBox alignment="CENTER" layoutY="53.0" prefHeight="606.0" prefWidth="780.0" spacing="10.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
                <Label alignment="CENTER" text="Visualizar Facturas Pagadas" textAlignment="CENTER">
                    <font>
                        <Font name="Berlin Sans FB" size="30.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" spacing="5.0">
                    <Label text="Dominio" />
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <TextField fx:id="dominioTextField" prefHeight="25.0" prefWidth="175.0" />
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <Label text="Desde Cuota:" />
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <ComboBox fx:id="fechaapartirComboBox" prefHeight="25.0" prefWidth="175.0" />
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <Label text="Hasta Cuota:" />
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <ComboBox fx:id="fechaHastaComboBox" prefHeight="25.0" prefWidth="175.0" />
                </HBox>
                <Button fx:id="buscarButton" mnemonicParsing="false" onAction="#buscarBoletas" prefWidth="75.0" text="Buscar" />
                <TableView fx:id="boletaTabla" prefHeight="400.0" prefWidth="750.0">
                    <columns>
                        <TableColumn fx:id="cuotaColumna" maxWidth="1500.0" prefWidth="100.0" text="Cuota" />
                        <TableColumn fx:id="importeColumna" maxWidth="1500.0" prefWidth="100.0" text="Importe" />
                        <TableColumn fx:id="fechadepagColumna" maxWidth="1500.0" prefWidth="100.0" text="Fecha de pago" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER" spacing="20.0">
                    <Button mnemonicParsing="false" text="Visualizar Detalle" />
                    <Button mnemonicParsing="false" onAction="#exportarFacturasPagadas" text="Exportar Facturas" />
                </HBox>
            </VBox>
        </AnchorPane>
    </center>
</BorderPane>
