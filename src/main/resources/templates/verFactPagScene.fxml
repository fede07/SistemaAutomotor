<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="750.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grupo2.SistemaAutomotor.controlador.VisualizarFacPagControlador">
    <left>
        <fx:include source="mainScene.fxml" />
    </left>
   <center>
         <VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="800.0" BorderPane.alignment="CENTER">
             <HBox alignment="CENTER" maxHeight="150.0" minHeight="150.0" prefHeight="150.0" prefWidth="800.0" styleClass="title_container" stylesheets="@../styles/content.css">
                 <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Visualizar Facturas Pagadas" />
             </HBox>
             <VBox>
                 <VBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                 </VBox.margin>
                 <HBox alignment="CENTER" spacing="5.0">
                     <Label text="Dominio" />
                 </HBox>
                 <HBox alignment="CENTER" spacing="5.0">
                     <TextField fx:id="dominioTextField" prefHeight="25.0" prefWidth="175.0" />
                 </HBox>
                 <VBox>
                     <HBox alignment="CENTER" prefWidth="750.0" spacing="5.0">
                         <Label maxWidth="75.0" minWidth="75.0" prefWidth="75.0" text="Desde Cuota:" />
                         <ComboBox fx:id="fechaapartirComboBox" prefHeight="25.0" prefWidth="29.0">
                             <HBox.margin>
                                 <Insets left="10.0" />
                             </HBox.margin>
                         </ComboBox>
                         <VBox.margin>
                             <Insets bottom="10.0" />
                         </VBox.margin>
                     </HBox>
                     <HBox alignment="CENTER" spacing="5.0">
                         <Label maxWidth="75.0" minWidth="75.0" prefWidth="75.0" text="Hasta Cuota:" />
                         <HBox alignment="CENTER" spacing="5.0">
                             <ComboBox fx:id="fechaHastaComboBox" prefHeight="25.0" prefWidth="0.0">
                                 <HBox.margin>
                                     <Insets left="10.0" />
                                 </HBox.margin>
                             </ComboBox>
                         </HBox>
                         <VBox.margin>
                             <Insets bottom="10.0" />
                         </VBox.margin>
                     </HBox>
                 </VBox>
                 <HBox alignment="CENTER" spacing="5.0">
                     <Button fx:id="buscarButton" mnemonicParsing="false" onAction="#buscarBoletas" prefWidth="75.0" text="Buscar" />
                 </HBox>
             </VBox>
             <TableView fx:id="boletaTabla" prefHeight="330.0" prefWidth="710.0">
                 <columns>
                     <TableColumn fx:id="cuotaColumna" maxWidth="1500.0" prefWidth="100.0" text="Cuota" />
                     <TableColumn fx:id="importeColumna" maxWidth="1500.0" prefWidth="100.0" text="Importe" />
                     <TableColumn fx:id="fechadepagColumna" maxWidth="1500.0" prefWidth="100.0" text="Fecha de pago" />
                 </columns>
                 <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                 </columnResizePolicy>
            <VBox.margin>
               <Insets left="25.0" right="25.0" />
            </VBox.margin>
             </TableView>
             <HBox alignment="CENTER" spacing="20.0">
                 <Button mnemonicParsing="false" text="Visualizar Detalle" />
                 <Button mnemonicParsing="false" onAction="#exportarFacturasPagadas" text="Exportar Facturas" />
            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin>
             </HBox>
         </VBox>
   </center>
</BorderPane>
